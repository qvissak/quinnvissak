root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.{js,json,yml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

# Tabs
[*.{scss,sass,css,html,handlebars}]
indent_style = tab
indent_size = 4
